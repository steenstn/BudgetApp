<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dip">

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <EditText 
	        android:id="@+id/dialog_installment_total_value"
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal|numberSigned"
	        android:hint="Price" />
	    
	    <AutoCompleteTextView 
	        android:id="@+id/dialog_installment_category"
	        android:layout_width="150dip"
	        android:layout_height="wrap_content"
	        android:inputType="textCapSentences"
	        android:completionThreshold="1"
	        android:hint="Category" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip">
	    <EditText 
	        android:id="@+id/dialog_installment_daily_payment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal|numberSigned"
	        android:hint="Daily payment" />
	    <Button 
	        android:id="@+id/dialog_installment_get_date"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:text="Get date"/>"
    </LinearLayout>
    <RelativeLayout 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
       
        <CheckBox
	    	    android:id="@+id/activeCheckBox"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:focusable="false"
	    	    android:paddingRight="20dip"
	    	    android:text="Active"
	    	    android:layout_alignParentRight="true"
	    	    android:checked="true"
	    	    />
    </RelativeLayout>
     <TextView 
	        android:id="@+id/dialog_installment_due_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="-10dip"
	        android:layout_marginTop="5dip"
	        android:paddingBottom="-10dip"
	        android:layout_gravity="center"
	        android:text="Due date"/>
    <DatePicker
        android:id="@+id/dialog_installment_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dip"
        android:paddingTop="-5dip"
        android:layout_gravity="center"
        android:calendarViewShown="false" />


       	<EditText
        android:id="@+id/dialog_installment_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:inputType="textCapSentences"
        android:hint="Enter comment" />
   
</LinearLayout>