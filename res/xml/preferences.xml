<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
 
    <PreferenceCategory android:title="Categories" >
        <EditTextPreference
                android:title="Add category"
                android:summary="Add a new category"
                android:key="addCategory"/>
        <EditTextPreference
                android:title="Remove category"
                android:summary="Remove a new category"
                android:key="removeCategory"/>
        
    </PreferenceCategory>
     
    <PreferenceCategory android:title="Other" >
        <PreferenceScreen
            android:key="setDailyBudget"
            android:title="Set daily budget" 
            android:summary="Set the value that will be added each day.">
        </PreferenceScreen>
        <PreferenceScreen
            android:key="editCurrency"
            android:title="Edit currency"
            android:summary="Customize display of currency and change exchange rate." >
        </PreferenceScreen>
 
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Backup" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="autoBackup"
            android:title="Enable automatic backup"
            android:summary="Writes to backup file after each transaction.">
            
            
        </CheckBoxPreference>
        <PreferenceScreen
            android:key="readBackup"
            android:title="Read backup file"
            android:summary="Overwrite current database with database from file." >
        </PreferenceScreen>
        <PreferenceScreen
            android:key="saveBackup"
            android:title="Save backup file"
            android:summary="Backup current database to file." >
        </PreferenceScreen>
 
    </PreferenceCategory>
 
</PreferenceScreen>