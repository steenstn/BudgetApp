<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewCurrentBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="0"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

       
    </LinearLayout>
    
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

	      <EditText
	          android:id="@+id/editTextSubtract"
	          android:layout_width="180dip"
	          android:layout_height="wrap_content"
	          android:ems="10"
	          android:inputType="numberSigned" >
				
	      </EditText>
	      <Spinner
            android:id="@+id/categories_spinner"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip"
	    >
	    <Button
	        android:id="@+id/topCategoryButton2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:text="Top 1"
	        android:onClick="buttonPressed"
	        />
	    <Button
	        android:id="@+id/topCategoryButton1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:text="Top 2"
	        android:onClick="buttonPressed" />
	    <Button
	        android:id="@+id/topCategoryButton3"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:text="Top 3"
	        android:onClick="buttonPressed" />
	
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		    <TextView
	          android:id="@+id/textViewLogLeft"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="10dip"
	          android:layout_weight="1"
	          android:text="Log" />
		    <TextView
	          android:id="@+id/textViewLogRight"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="10dip"
	          android:layout_weight="1"
	          android:text="Log" />
		    
	    
	</LinearLayout>
      

      

</LinearLayout>

