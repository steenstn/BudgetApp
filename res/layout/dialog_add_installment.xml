<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dip">

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <EditText 
	        android:id="@+id/dialog_installment_total_value"
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal|numberSigned"
	        android:hint="Price" />
	    
	    <EditText 
	        android:id="@+id/dialog_installment_category"
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:inputType="textCapSentences"
	        android:hint="Category" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip">
	    <EditText 
	        android:id="@+id/dialog_installment_daily_payment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal|numberSigned"
	        android:hint="Daily payment" />
	    <Button 
	        android:id="@+id/dialog_installment_get_date"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:text="Get date"/>"
    </LinearLayout>
    <TextView 
        android:id="@+id/dialog_installment_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="Due date"
        android:gravity="center"/>
    <DatePicker
        android:id="@+id/dialog_installment_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip"
        android:paddingTop="0dip"
        android:layout_gravity="center"
        android:calendarViewShown="false" />


       	<EditText
        android:id="@+id/dialog_installment_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:inputType="textCapSentences"
        android:hint="Enter comment" />
   
</LinearLayout>