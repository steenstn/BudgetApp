<budgetapp.views.StatsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_marginTop="2dip"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        
        <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_weight="3"
        />
        <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />
        <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        />
        
    </LinearLayout>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_marginTop="2dip"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        
        <TextView
	        android:id="@+id/textViewHeaderCategory"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_marginTop="10dip"
	        android:layout_weight="3"
	        android:textStyle="bold"
	        android:text="Category" />
	    <TextView
	        android:id="@+id/textViewHeaderNum"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_marginTop="10dip"
	        android:layout_weight="3"
	        android:textStyle="bold"
	        android:gravity="left"
	        android:text="Transactions" />
	    <TextView
	        android:id="@+id/textViewHeaderTotal"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_marginTop="10dip"
	        android:layout_weight="3"
	        android:textStyle="bold"
	        android:text="Total" />
    </LinearLayout>
    <ListView 
          android:id="@+id/listViewCategoryStats"
          android:layout_width="match_parent"
          android:layout_height="0dip"
          android:layout_margin="0dip"
          android:padding="0dip"
          android:layout_weight="3"
          android:divider="@null"
		  android:dividerHeight="-4dip"
		  android:focusable="false"
		  android:focusableInTouchMode="false"
		  android:listSelector="@android:color/transparent"
          android:text="" />
    
	    <TextView
          android:id="@+id/textViewLogTopHead"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dip"
          android:layout_marginBottom="2dip"
          
          android:text="All transactions" />
	    
	    <ListView 
          android:id="@+id/ListViewLogTop"
          android:layout_width="match_parent"
          android:layout_height="0dip"
          android:layout_marginTop="1dip"
          android:layout_weight="3"
          android:text="" />
	   
		    

</budgetapp.views.StatsView>

